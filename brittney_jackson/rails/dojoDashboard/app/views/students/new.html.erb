
<!DOCTYPE html>
<html>
	<head>
		<title>Add a New Student to <%= @dojo.branch %></title>
	</head>
	<body>

		<h2>Add a New Student to <%= @dojo.branch %></h2>
		<% if flash[:errors] %>
			<h3><%= flash[:errors] %> </h3>
		<% end %>
		<form action="/dojos/<%= @dojo.id %>/students/create" method="post">
			<input type ='hidden' name='authenticity_token' value='<%= form_authenticity_token %>'/><br>
			<label>First Name:</label>
    		<input type='text' name='student[first_name]' placeholder='First Name' /><br>
    		<label>Last Name:</label>
    		<input type='text' name='student[last_name]' placeholder='Last Name' /><br>
    		<label>Email:</label>
    		<input type='text' name='student[email]' placeholder='Email' /><br>
    		<label>Dojo:</label>
    		<select type="text" name='student[dojo_id]'>
				<option value="9">Dallas</option>
				<option value="2">San Jose</option>
				<option value="1">Seattle</option>
				<option value="3">Burbank</option>
				<option value="10">Orlando</option>
			</select><br>
			<input type='submit' value='Create' />
		</form><br>

		<a href="/dojos">Home</a> |  <a href="/dojos/<%= @dojo.id %>"><%= @dojo.branch %></a>

	</body>
</html>