<!DOCTYPE html>
<html>
	<head>
		<title><%= @dojo.branch %> Students</title>
	</head>
	<body>

		<div id="show">
			<h1> <%= @dojo.branch %> </h1> <a href="/dojos/<%= @dojo.id %>/edit">Edit</a>
			<h3> <%= @dojo.street %> </h3>
			<h3> <%= @dojo.city %> </h3>
			<h3> <%= @dojo.state %> </h3>
			<h3><%= @dojo.id %></h3>
		</div>

		<table>
			<thead>
				<th>First Name</th>
				<th>Last Name</th>
				<th>Email</th>
				<th>Actions</th>
			</thead>
			<%  @students.each do |student| %>
			<tr>
				<td> <%= student.first_name %> </td>
				<td> <%= student.last_name %> </td>
				<td> <%= student.email %> </td>
				<td> <a href="/dojos/<%= @dojo.id %>/students/<%= student.id %>">Show</a> | <a href="/dojos/<%= @dojo.id %>/students/<%= student.id %>/edit">Edit</a> | <a href="/dojos/<%= @dojo.id %>/students/<%= student.id %>/destroy">Destroy</a> </td>
			</tr>
			<% end %>
		</table>
		<a href="/dojos">Home</a> | <a href="/dojos/<%= @dojo.id %>/students/new">Add Student</a>

	</body>
</html>