

<!DOCTYPE html>
<html>
	<head>
		<title><%= @dojo.branch %>'s <%= @student.first_name %> <%= @student.last_name %></title>
	</head>
	<body>
		<h2><%= @dojo.branch %>'s' <%= @student.first_name %> <%= @student.last_name %></h2>
		<h3>Email: <%= @student.email %> </h3>
		<hr>
		<h3>Cohort Members</h3>
		<table>
			<thead>
				<th>First Name</th>
				<th>Last Name</th>
				<th>Email</th>
			</thead>
			<%  @students.each do |student| %>
			<tr>
				<td> <%= student.first_name %> </td>
				<td> <%= student.last_name %> </td>
				<td> <%= student.email %> </td>
			</tr>
			<% end %>
		</table>
		<a href="/dojos">Home</a> | <a href="/dojos/<%= @dojo.id %>/students/<%= @student.id %>/edit">Edit <%= @student.first_name %></a>

	</body>
</html>